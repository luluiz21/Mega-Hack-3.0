<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Regiao"

    >
    <ImageView
        android:id="@+id/mapaNordeste"
        android:layout_width="170dp"
        android:layout_height="178dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mapa_nordeste" />

    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/multiWaveHeader"
        android.id="@+id/wave_header"
        android:layout_width="413dp"
        android:layout_height="600dp"
        android:layout_marginTop="150dp"
        android:scaleY="-1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.scwang.wave.MultiWaveHeader>

    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/multiWaveHeader2"
        android.id="@+id/sand_header"
        android:layout_width="412dp"
        android:layout_height="135dp"
        android:scaleY="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:mwhCloseColor="@color/colorSand"
        app:mwhStartColor="@color/colorSandBlack"
        app:mwhVelocity="0.1" >

    </com.scwang.wave.MultiWaveHeader>

    <ImageView
        android:id="@+id/baiana"
        android:layout_width="116dp"
        android:layout_height="264dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bahiana" />

    <ImageView
        android:id="@+id/cangaco"
        android:layout_width="106dp"
        android:layout_height="247dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cangaco_prancheta" />


    <ImageView
        android:id="@+id/nordeste"
        android:layout_width="214dp"
        android:layout_height="161dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nordeste" />

    <ImageView
        android:id="@+id/cordel"
        android:layout_width="515dp"
        android:layout_height="126dp"
        android:layout_marginTop="260dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cordel_prancheta" />

    <ImageView
        android:id="@+id/balao"
        android:layout_width="247dp"
        android:layout_height="157dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/balao" />

    <ImageView
        android:id="@+id/balao2"
        android:layout_width="269dp"
        android:layout_height="167dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="160dp"
        android:scaleX="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/balao" />

    <ImageView
        android:id="@+id/livro"
        android:layout_width="176dp"
        android:layout_height="130dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/capitaes_da_areia" />

    <ImageView
        android:id="@+id/saibaMais"
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/saiba_mais" />

    <ImageView
        android:id="@+id/saibaMais2"
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/livro"
        app:layout_constraintStart_toStartOf="@+id/livro"
        app:srcCompat="@drawable/saiba_mais" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="10dp"
        android:text="O cordel nordestino é uma\n expressão popular que se
caracteriza \npela declamação de  poemas.\n Esses textos rimados são
impressos em\n folhetos e pendurados em \ncordas - os cordéis!"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@+id/balao"
        app:layout_constraintEnd_toEndOf="@+id/balao"
        app:layout_constraintStart_toStartOf="@+id/balao"
        app:layout_constraintTop_toTopOf="@+id/balao" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textAlignment="center"
        android:layout_marginEnd="54dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:text="Capitães da Areia é um romance de autoria\ndo escritor brasileiro Jorge Amado, escrito\n
em 1937.A obra retrata a vida de um grupo\nde menores abandonados que crescem\nnas ruas da cidade de Salvador, Bahia,
 \nvivendo em um trapiche, \nroubando para sobreviver "
        app:layout_constraintBottom_toBottomOf="@+id/balao2"
        app:layout_constraintEnd_toEndOf="@+id/balao2"
        app:layout_constraintStart_toStartOf="@+id/balao2"
        app:layout_constraintTop_toTopOf="@+id/balao2" />


</androidx.constraintlayout.widget.ConstraintLayout>